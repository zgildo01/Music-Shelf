<%- include('../partials/html-head')  %> 
<link rel="stylesheet" href="/stylesheets/songs/new.css">
<%- include('../partials/nav')  %> 
<main>
  <h1 id="new-song"><%= title %></h1>
  <form 
  action="/songs/<%= user.profile._id %>/<%= albumId %>" 
  method="post"
  >
    <label for="song-name">Song Name:</label>
    <input type="text" name="songName" id="song-name" required>
    <label for="track-number">Track Number:</label>
    <input type="number" name="trackNo" id="track-number" min="1" required>
    <button type="submit">Add Song</button>
  </form>
</main>
<%- include('../partials/footer')  %> 