<%- include('../partials/html-head')  %> 
<link rel="stylesheet" href="/stylesheets/albums/new.css">
<%- include('../partials/nav')  %> 
<main>
  <h1 id="add-album"><%= title %></h1>
  <form 
  action="/profiles/<%= user.profile._id %>/albums" 
  method="post"
  >
    <label for="album-name">Album Name:</label>
    <input type="text" name="albumName" id="album-name" required>
    <label for="artist-name">Artist Name:</label>
    <input type="text" name="artistName" id="artist-name" required>
    <label for="release-date">Release Date:</label>
    <input type="date" name="releaseDate" id="release-date" required>
    <button type="submit" class="button-1" role="button">Add Album</button>
  </form>
</main>
<%- include('../partials/footer')  %> 